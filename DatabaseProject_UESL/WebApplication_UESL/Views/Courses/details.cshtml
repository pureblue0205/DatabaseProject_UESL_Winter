@model WebApplication_UESL.Models.Course

@{
    ViewBag.Title = "details";
}

<h0>Course details</h0>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClassRecordID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<div>
    
    <hr />
   
    <div class="form-group row">
        @Html.Label("Class Name", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DisplayFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control" } })
            
        </div>
    </div>

    <div class="form-group row">
        @Html.Label("Class ID", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DisplayFor(model => model.classID, new { htmlAttributes = new { @class = "form-control" } })
            
        </div>
    </div>

    <div class="form-group row">
        @Html.Label("Instructor", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Instructor, new { htmlAttributes = new { @class = "form-control" } })
            
        </div>
    </div>

    <div class="form-group row">
        @Html.Label("Quarter", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DisplayFor(model => model.quarter, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>

    <div class="form-group row">
        @Html.Label("Meeting Time", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DisplayFor(model => model.MeetTime, new { htmlAttributes = new { @class = "form-control" } })
           
        </div>
    </div>

    <div class="form-group row">
        @Html.Label("Location", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DisplayFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
           
        </div>
    </div>

    <div class="form-group row">
        @Html.Label("Catalog Number", new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DisplayFor(model => model.CatalogNumber, new { htmlAttributes = new { @class = "form-control" } })
           
        </div>
    </div> 

   
</div>

<center><h1>Enrolled Students for this Course</h1></center>
<p>
    <as>
        <button onclick="location.href='@Url.Action("addEnrollment", "Courses", new { uid = Model.ClassRecordID })';return false;">Enroll a Student</button>   
    </as>
</p>

@*Renders the partial view that shows currently enrolled classes for this student*@
<center>@{Html.RenderAction("enrolledStudents", "Courses");}</center>